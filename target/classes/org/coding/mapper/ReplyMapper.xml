<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="org.coding.mapper.ReplyMapper">

	<insert id="rewrite">
  		insert into reply(reply,id,bno)
		values(#{reply},#{id},#{bno})
  	</insert>

	<select id="list" resultType="org.coding.model.ReplyVO">  <!-- list 값을 resultType에 넣어라? -->
		select * from reply where bno = #{bno}	
	</select>
	
	<update id="modify">
  		update reply
  		set reply=#{reply}
  		where rno=#{rno}
  	</update>
  	
  	<delete id="remove">
  		delete from reply
  		where rno=#{rno}
  	</delete>
  	  	
</mapper> 